Proceso carrera_obstaculos
	
	Definir comienzo, valla, tunel, laguna Como Caracter;
	Definir skip1, skip2, skip3, skip4 Como Caracter;
	
	Escribir "¡Comienza la carrera!";
	Escribir "Escribe comenzar para iniciar la carrera";
	Leer comienzo;
	Si comienzo = "comenzar" Entonces
		Escribir "¿Te encuentras una valla? Responde si/ no para continuar: ";
		Leer valla;
		Si valla = "si" Entonces
			Escribir ".";
			Escribir "Debes saltar por la valla";
			Escribir ".";
		SiNo
			Escribir ".";
			Escribir "Sigue corriendo!";
			Escribir ".";
		FinSi
		
		Escribir "¿Te encuentras un túnel? Responde si/no para continuar: ";
		Leer tunel;
		Si tunel = "si" Entonces
			Escribir ".";
			Escribir "Atraviesas el túnel";
			Escribir ".";
		SiNo
			Escribir ".";
			Escribir "Continuas corriendo";
			Escribir ".";
		FinSi
		
		Escribir "¿Te encuentras una laguna? Responde si/ no para continuar: ";
		Leer laguna;
		Si laguna = "si" Entonces
			Escribir ".";
			Escribir "Debes nadar, pero te agotas....";
			Escribir "Te devuelves y pierdes la carrera:(";
			Escribir ".";
		SiNo
			Escribir ".";
			Escribir "¡Felicitaciones! Has llegado a la meta con éxito!!!";
			Escribir ".";
	FinSi
	SiNo
		Escribir "¿Que haces?, ¿No vas a correr????";
		Leer skip1;
		Escribir "Te quedas sentado...";
		Leer skip2;
		Escribir "Ves como todos se están alejando...";
		Leer skip3;
		Escribir "Pierdes la carrera.";
		Leer skip4;
		Escribir "????????????????";
	FinSi
	
FinProceso
